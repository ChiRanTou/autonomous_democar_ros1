<launch>
    <!-- 定义小车模型路径 -->
    <arg name="democar" default="$(find democar_description)/urdf/demo_car.urdf"/>

    <!-- 把小车模型放入参数服务器中 -->
    <param name="robot_description" textfile="$(arg democar)"/>

    <!-- 启动机器人状态发布节点-->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" args="$(arg democar)"/>

    <!-- 启动关节状态发布节点-->
    <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher" args="$(arg democar)"/>
    
    <include file="$(find gazebo_ros)/launch/empty_world.launch"/>

    <!-- 启动Gazebo -->
    <node pkg="gazebo_ros" type="spawn_model" name="gazebo_spawn" output="screen" args="-urdf -model car_model -param robot_description"/>

    <!-- 启动rviz-->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find democar_description)/config/democar.rviz"/>


</launch>